# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://yourdomain.com

# Database - MongoDB Atlas (recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fanpit?retryWrites=true&w=majority
MONGODB_DATABASE=fanpit_prod

# Alternative: Local MongoDB with Docker
# MONGODB_URI=mongodb://mongodb:27017/fanpit_prod
# MONGODB_ROOT_USERNAME=admin
# MONGODB_ROOT_PASSWORD=secure_password

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secure_jwt_access_secret_here_minimum_32_chars
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_here_minimum_32_chars

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fapit-space-images

# Alternative: MinIO Configuration
# AWS_ENDPOINT=https://minio.yourdomain.com
# AWS_ACCESS_KEY_ID=minio_access_key
# AWS_SECRET_ACCESS_KEY=minio_secret_key
# AWS_S3_BUCKET=fanpit-uploads

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (SendGrid, AWS SES, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Fanpit Platform

# Alternative: SMTP Configuration
# EMAIL_SERVICE=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/fanpit.log

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Performance
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
